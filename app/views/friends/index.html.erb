
<% if user_signed_in? %>

<h1>Friend List</h1>
<br>

    <table class="table table-bordered table-dark">
      <thead class="thead-dark">
        <tr>
          <th>First name</th>
          <th>Last name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Twitter</th>
          <th>Image</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @friends.each do |friend| %>
        <% if friend.user == current_user %>
          <tr>
            <td><%= friend.first_name %></td>
            <td><%= friend.last_name %></td>
            <td><%= friend.email %></td>
            <td><%= friend.phone %></td>
            <td><p> @<%= friend.twitter %></p></td>
            <td><%= image_tag(friend.image , :width => 200, :height => 200) %></td>
            
            <td><%= link_to 'Show', friend %></td>
            <td><%= link_to 'Edit', edit_friend_path(friend) %></td>
            <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            
          </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Friend', new_friend_path ,class:"btn btn-secondary"%>
<% else %>

  <h1>Hello there..!</h1>
let's get this web starteddd yaayyyy

<% end %>